@model TaskManagementSystem.Models.UserTaskMappingModel

@{
    ViewData["Title"] = "Assign Task to User";
    var notification = TempData["Notification"] as string;
}

@if (!string.IsNullOrEmpty(notification))
{
    <div class="alert alert-success" role="alert">
        @notification
    </div>
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div class="form-group mb-3">
                    <label for="UserId" class="form-label">User</label>
                    <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(ViewBag.Users, "Id", "Name"))" required>
                        <option value="" disabled selected>Select a user</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="TaskId" class="form-label">Task</label>
                    <select asp-for="TaskId" class="form-select" asp-items="@(new SelectList(ViewBag.Tasks, "Id", "Title"))" required>
                        <option value="" disabled selected>Select a task</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
            </form>
        </div>
    </div>
</div>



