@model IEnumerable<TaskManagementSystem.Models.UserModel>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>User List</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="mb-3">
                <a asp-action="Create" class="btn btn-primary">Create New User</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

