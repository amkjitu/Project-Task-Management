@model IEnumerable<TaskManagementSystem.Models.TaskModel>

@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1>Task List</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New Task</a>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.Priority</td>
                            <td>@task.Status</td>
                            <td>@task.DueDate.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

