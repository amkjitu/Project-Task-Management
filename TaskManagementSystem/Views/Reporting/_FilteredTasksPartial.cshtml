@model IEnumerable<TaskManagementSystem.Models.TaskModel>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Due Date</th>
                    </tr>
                </thead>
                <tbody style="max-height: 400px; overflow-y: auto;">
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td style="padding: 10px;">@task.Title</td>
                            <td style="padding: 10px;">@task.Description</td>
                            <td style="padding: 10px;">@task.Priority</td>
                            <td style="padding: 10px;">@task.Status</td>
                            <td style="padding: 10px;">@task.DueDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


