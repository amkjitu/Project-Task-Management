@model IEnumerable<TaskManagementSystem.Models.TaskModel>

@{
    ViewData["Title"] = "Task Reports";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Total Tasks by Status</h2>
            <div class="table-responsive"> 
                <table class="table table-bordered table-hover">
                    <thead class="table-success"> 
                        <tr>
                            <th>Status</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.TotalByStatus as Dictionary<string, int>)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Overdue Tasks</h2>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-danger"> 
                        <tr>
                            <th>Title</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in ViewBag.OverdueTasks as IEnumerable<TaskManagementSystem.Models.TaskModel>)
                        {
                            <tr>
                                <td>@task.Title</td>
                                <td>@task.DueDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


